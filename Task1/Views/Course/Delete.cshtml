@model Tasks.BLL.ViewModels.CourseVM
@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger fw-bold">Delete Course</h2>
    <h4>Are you sure you want to delete this course?</h4>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Instructor</dt>
        <dd class="col-sm-10">@Model.InstructorFullName</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
