@model Tasks.BLL.ViewModels.EditCoursePageVM
@{
    ViewData["Title"] = "Edit Course";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">Edit Course</h2>

    <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-light">
        @Html.Partial("_CourseForm", Model.Course)

        <div class="form-group mb-3">
            <label asp-for="Course.InstructorId" class="form-label">Instructor</label>
            <select asp-for="Course.InstructorId" class="form-select" asp-items="Model.Instructors"></select>
            <span asp-validation-for="Course.InstructorId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-4">Save</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
