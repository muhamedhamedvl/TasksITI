@model IEnumerable<Tasks.BLL.ViewModels.CourseVM>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">Courses</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Add New Course</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Instructor</th>
                <th>Category</th>
                <th>Start</th>
                <th>End</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.InstructorFullName</td>
                    <td>@c.Category</td>
                    <td>@c.StartDate.ToShortDateString()</td>
                    <td>@c.EndDate.ToShortDateString()</td>
                    <td>@c.IsActive</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
