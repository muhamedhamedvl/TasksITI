@model List<Course>

<form method="get" asp-action="Index">
    <label for="category">Filter by Category:</label>
    <select id="category" name="category" onchange="this.form.submit()">
        <option value="">-- All Categories --</option>
        @foreach (var cat in ViewBag.Categories as SelectList)
        {
            <option value="@cat.Text" selected="@(cat.Text == ViewBag.SelectedCategory ? "selected" : null)">
                @cat.Text
            </option>
        }
    </select>
</form>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.Category</td>
                <td>@course.StartDate.ToShortDateString()</td>
                <td>@course.EndDate.ToShortDateString()</td>
                <td>@course.IsActive</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
